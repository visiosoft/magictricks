<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MagicTricks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@drawable/mystical_gradient_background</item>
        <item name="android:colorBackground">@color/background_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.MagicTricks.CardView</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.MagicTricks.Button</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
</resources>