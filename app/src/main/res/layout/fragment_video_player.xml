<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/videoTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/videoDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="6dp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share this video"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/whatsappShareButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_whatsapp"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="Share on WhatsApp"
                    android:layout_marginEnd="16dp"
                    android:padding="12dp"/>

                <ImageButton
                    android:id="@+id/facebookShareButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_facebook"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="Share on Facebook"
                    android:layout_marginEnd="16dp"
                    android:padding="12dp"/>

                <ImageButton
                    android:id="@+id/twitterShareButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_twitter"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="Share on Twitter"
                    android:padding="12dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All Videos"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif"
                    android:padding="8dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/relatedVideosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout> 