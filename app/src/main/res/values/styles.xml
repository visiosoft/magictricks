<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text style -->
    <style name="TextAppearance.Base" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Heading style -->
    <style name="TextAppearance.Heading" parent="TextAppearance.Base">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Body text style -->
    <style name="TextAppearance.Body" parent="TextAppearance.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Category button text style -->
    <style name="TextAppearance.CategoryButton" parent="TextAppearance.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Watch Now Button Style -->
    <style name="Widget.MagicTricks.WatchNowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">4dp</item>
    </style>
</resources> 